<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="ThemeSplash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeBg" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/theme_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="WhiteOpenSans" parent="@style/ThemeSplash">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="borderWidth">2.0dip</item>
    </style>
</resources>