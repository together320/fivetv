<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <style name="ThemeSplash" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeBg" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/theme_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="WhiteOpenSans" parent="@style/ThemeSplash">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="borderWidth">2.0dip</item>
    </style>
    <style name="SeekBarAppThemeNew">
        <item name="android:focusable">false</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/circle_seekbar</item>
        <item name="android:progressDrawable">@drawable/circle_seekbar</item>
        <item name="android:thumb">@drawable/circlebtn</item>
    </style>
    <style name="MyDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>