<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_grid_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/line_item_image"
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/loading_landscape"
        android:adjustViewBounds="true"
        app:strokeColor="@null"
        app:shapeAppearanceOverlay="@style/roundItemDashboard" />

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dash_item_lock"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:background="@color/background_v3"
            android:src="@mipmap/locked"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/dash_item_live_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_dash_item_live"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dash_item_num_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:paddingStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#80FFFFFF"
            android:text="10"
            android:textSize="60.0sp"
            android:shadowColor="#FF000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/dash_item_num_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:paddingStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#80FFFFFF"
            android:text="10"
            android:textSize="60.0sp"
            android:shadowColor="#FF000000"
            android:shadowDx="-5"
            android:shadowDy="-5"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/dash_item_num_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:paddingStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#80FFFFFF"
            android:text="10"
            android:textSize="60.0sp"
            android:shadowColor="#FF000000"
            android:shadowDx="5"
            android:shadowDy="-5"
            android:shadowRadius="5"/>

        <TextView
            android:id="@+id/dash_item_num_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="false"
            android:paddingStart="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#80FFFFFF"
            android:text="10"
            android:textSize="60.0sp"
            android:shadowColor="#FF000000"
            android:shadowDx="-5"
            android:shadowDy="5"
            android:shadowRadius="5"/>
    </RelativeLayout>
</RelativeLayout>
