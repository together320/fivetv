<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/WhiteOpenSans">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingBottom="10.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40.0px">

                <ImageView
                    android:id="@+id/channel_started"
                    android:layout_width="24.0px"
                    android:layout_height="24.0px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0px"
                    android:src="@mipmap/channel_started_bg"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/channel_type_icon"
                    android:layout_width="24.0px"
                    android:layout_height="40.0px"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0px"
                    android:layout_toRightOf="@id/channel_started"
                    android:src="@mipmap/group_type_favorite"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/channel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/channel_type_icon"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/open_sans_bold"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="32.0px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40.0px"
                android:layout_marginTop="5.0px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/program_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="#ffcacaca"
                    android:textSize="26.0px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>