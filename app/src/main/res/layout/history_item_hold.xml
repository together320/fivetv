<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/history_item_width"
    android:layout_height="@dimen/history_item_height"
    android:background="@drawable/history_item_bg_selector"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:theme="@style/WhiteOpenSans">

    <TextView
        android:id="@+id/history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="3dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/no_watching_history"
        android:textSize="19sp" />
</RelativeLayout>
