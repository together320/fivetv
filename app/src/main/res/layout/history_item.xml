<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/history_item_width"
    android:layout_height="@dimen/history_item_height"
    android:background="@drawable/history_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:theme="@style/WhiteOpenSans"
    app:layout_auto_basewidth="height">

    <TextView
        android:id="@+id/visit_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="d MMM HH:mm"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/no_watching_history"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/program_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/program"
        android:textSize="11sp" />
</LinearLayout>
