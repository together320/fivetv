<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/WhiteOpenSans">

    <RelativeLayout
        android:layout_width="600.0px"
        android:layout_height="135.0px"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/epg_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0px"
            android:ellipsize="marquee"
            android:maxWidth="480.0px"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="40.0px" />

        <TextView
            android:id="@+id/epg_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/epg_item_name"
            android:layout_marginLeft="30.0px"
            android:layout_marginTop="7.0px"
            android:textColor="@color/channel_epg_sub_txt"
            android:textSize="32.0px" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/epg_item_icon"
        android:layout_width="72.0px"
        android:layout_height="36.0px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24.0px"
        android:layout_marginRight="10.0px"
        android:src="@mipmap/live"
        android:visibility="gone" />
</RelativeLayout>